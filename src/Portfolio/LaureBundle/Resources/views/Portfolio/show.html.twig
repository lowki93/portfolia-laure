<div class="row">
    <h2>PORTFOLIO</h2>
    <ul class="small-block-grid-2 cover-close">
        {% for i in 1..4 %}
            <li {% if i is divisibleby(2) %}class="video"{% endif %}>
                {% if i is divisibleby(2) %}
                    <div class="image flex"
                         style="background-image: url('/bundles/portfoliolaure/images/test/inpulse.png');">
                        <div class="play flex">
                            <i class="fa fa-play"></i>
                        </div>
                    </div>
                {% else %}
                    <img src="{{ asset('bundles/portfoliolaure/images/test/test.png') }}" alt="test" />
                {% endif %}
                {% if i%2 == 0 %}
                    <div class="info information">
                        <h4>VIDEO</h4>
                        <p>Impulse <br />Sound System</p>
                        <p>A video for the exhibition “SAY WATT ? Le culte du Sound System” at La Gaité Lyrique,
                            Paris - 2nd July to 25th August 2013</p>
                    </div>
                {% else %}
                    <div class="info">
                        <h3>EDITION</h3>
                        <p>Rencontres - Livre photographique</p>
                    </div>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
    {% include 'PortfolioLaureBundle:Partial:more.button.html.twig' %}
</div>