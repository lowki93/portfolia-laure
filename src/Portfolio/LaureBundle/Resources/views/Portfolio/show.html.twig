            {#<li {% if i is divisibleby(2) %}class="video"{% endif %}>#}
                {#{% if i is divisibleby(2) %}#}
                    {#<div class="image flex"#}
                         {#style="background-image: url('/bundles/portfoliolaure/images/test/inpulse.png');">#}
                        {#<div class="play flex">#}
