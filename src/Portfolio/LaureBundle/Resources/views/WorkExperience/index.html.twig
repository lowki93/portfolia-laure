{% extends '::baseAdmin.html.twig' %}

{% block content%}
    <h1>workExperience list</h1>

    <table class="medium-12 columns" >
        <thead>
            <tr>
                <th>Company</th>
                <th>Type</th>
                <th>Yourjob</th>
                <th>Information</th>
                <th>Year</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.company }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.yourJob }}</td>
                <td>{{ entity.information }}</td>
                <td>{{ entity.year }}</td>
                <td>
                    <ul class="small-block-grid-6 medium-block-grid-6">
                        <li>
                            <img src="/uploads/workexperience/{{ entity.path }}" alt="{{ entity.company }}" />
                        </li>
                    </ul>
                </td>
                <td>
                    <a href="{{ path('workexperience_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('workexperience_new') }}">Create a new entry</a>
{% endblock %}